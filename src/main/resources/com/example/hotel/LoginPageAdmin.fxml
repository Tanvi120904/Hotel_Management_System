<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hotel.AdminLoginController">
   <children>
      <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" style="-fx-background-color: #EDE8E0;" VBox.vgrow="ALWAYS">
         <children>
            <Text layoutX="149.0" layoutY="65.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Login To Your Account" textAlignment="CENTER" wrappingWidth="405.327392578125">
               <font>
                  <Font name="Calisto MT Bold" size="28.0" />
               </font>
            </Text>
            <Text layoutX="56.0" layoutY="147.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Username :-" wrappingWidth="128.859375">
               <font>
                  <Font name="Calisto MT Bold" size="24.0" />
               </font>
            </Text>
            <!-- Added fx:id for usernameField -->
            <TextField fx:id="usernameField" layoutX="223.0" layoutY="126.0" prefHeight="30.0" prefWidth="330.0" />

            <Text layoutX="56.0" layoutY="205.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Password :-">
               <font>
                  <Font name="Calisto MT Bold" size="24.0" />
               </font>
            </Text>
            <!-- Added fx:id for passwordField -->
            <PasswordField fx:id="passwordField" layoutX="222.0" layoutY="183.0" prefHeight="30.0" prefWidth="330.0" />

            <!-- Login button references the validateLogin method -->
            <Button layoutX="419.0" layoutY="286.0" mnemonicParsing="false" onAction="#validateLogin" prefHeight="37.0" prefWidth="150.0" style="-fx-background-color: #3CB043;" text="Login" textFill="#eae9e9">
               <font>
                  <Font name="Calisto MT Bold" size="24.0" />
               </font>
               <effect>
                  <InnerShadow />
               </effect>
            </Button>

            <!-- Cancel button switches back to Main Page -->
            <Button layoutX="54.0" layoutY="286.0" mnemonicParsing="false" onAction="#switchToMainPage" prefHeight="49.0" prefWidth="205.0" style="-fx-background-color: #3CB043;" text="Cancel" textFill="#eae9e9">
               <font>
                  <Font name="Calisto MT Bold" size="24.0" />
               </font>
               <effect>
                  <InnerShadow />
               </effect>
            </Button>
         </children>
      </AnchorPane>
   </children>
</VBox>
